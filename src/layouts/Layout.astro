---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Vandent. | Odontología Profesional",
  description = "Cuidamos tu sonrisa con tratamientos dentales de calidad. Odontología general, infantil y prótesis. Agenda tu cita hoy."
} = Astro.props;
import FloatingChat from '../components/FloatingChat.astro';
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#B39DDB" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="es_MX" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>

    <!-- Preconnect to Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Material Icons -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,1,0&display=swap" />

    <style>
      .material-symbols-rounded {
        font-variation-settings: 'FILL' 1, 'wght' 400, 'GRAD' 0, 'opsz' 24;
      }
    </style>

    <!-- Progressive Enhancement: Add js-enabled class if JS is active -->
    <script>
      document.documentElement.classList.add('js-enabled');
    </script>
  </head>
  <body class="min-h-screen flex flex-col">
    <slot />

    <script>
      // Scroll reveal observer - optimized
      const observer = new IntersectionObserver((entries) => {
        let hasIntersecting = false;
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            hasIntersecting = true;
            window.requestAnimationFrame(() => {
              entry.target.classList.add('visible');
            });
            observer.unobserve(entry.target); // Optional: Stop observing once visible for better perf
          }
        });
      }, { threshold: 0.1, rootMargin: '0px 0px -50px 0px' });

      document.querySelectorAll('.reveal').forEach(el => observer.observe(el));
    </script>
    <FloatingChat />
  </body>
</html>
