---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Vandent. | Odontología Profesional",
  description = "Cuidamos tu sonrisa con tratamientos dentales de calidad. Odontología general, infantil y prótesis. Agenda tu cita hoy."
} = Astro.props;
import FloatingChat from '../components/FloatingChat.astro';
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#7C3AED" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="es_MX" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>

    <!-- Preconnect to Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Google Fonts (moved from CSS @import for non-blocking load) -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800&family=Inter:wght@300;400;500;600&display=swap" />

    <!-- Material Icons (async load to avoid render-blocking) -->
    <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,1,0&display=swap" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,1,0&display=swap" media="print" onload="this.media='all'" />

    <style>
      .material-symbols-rounded {
        font-variation-settings: 'FILL' 1, 'wght' 400, 'GRAD' 0, 'opsz' 24;
      }
    </style>

    <!-- Progressive Enhancement: Add js-enabled class if JS is active -->
    <script>
      document.documentElement.classList.add('js-enabled');
    </script>
    <style is:global>
      /* Mobile optimization: remove 300ms tap delay */
      .js-enabled body {
        touch-action: manipulation;
      }
      
      /* Accessibility: Respect reduced motion preference */
      @media (prefers-reduced-motion: reduce) {
        *,
        *::before,
        *::after {
          animation-duration: 0.01ms !important;
          animation-iteration-count: 1 !important;
          transition-duration: 0.01ms !important;
          scroll-behavior: auto !important;
        }
        
        .reveal {
          opacity: 1 !important;
          transform: none !important;
        }
      }
    </style>
  </head>
  <body class="min-h-screen flex flex-col">
    <!-- Skip link for keyboard accessibility -->
    <a href="#sobre-mi" class="sr-only focus:not-sr-only focus:fixed focus:top-4 focus:left-4 focus:z-[100] focus:bg-lavender-600 focus:text-white focus:px-4 focus:py-2 focus:rounded-lg focus:text-sm focus:font-semibold">Saltar al contenido</a>
    <slot />

    <script>
      // Scroll reveal observer - optimized
      const observer = new IntersectionObserver((entries) => {
        let hasIntersecting = false;
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            hasIntersecting = true;
            window.requestAnimationFrame(() => {
              entry.target.classList.add('visible');
            });
            observer.unobserve(entry.target); // Optional: Stop observing once visible for better perf
          }
        });
      }, { threshold: 0.1, rootMargin: '0px 0px -50px 0px' });

      document.querySelectorAll('.reveal').forEach(el => observer.observe(el));
    </script>
    <FloatingChat />
  </body>
</html>
