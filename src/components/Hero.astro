const whatsappLink = `https://wa.me/${whatsappNumber}?text=${whatsappMessage}`;
---

<section id="inicio" class="relative min-h-[100dvh] flex items-center overflow-hidden">
  <!-- Background gradient -->
  <div class="absolute inset-0 bg-gradient-to-br from-lavender-100 via-white to-cream"></div>

  <!-- Decorative elements -->
  <div class="absolute top-20 right-10 w-72 h-72 bg-lavender-200/30 rounded-full blur-3xl animate-float"></div>
  <div class="absolute bottom-20 left-10 w-96 h-96 bg-lavender-100/40 rounded-full blur-3xl animate-float" style="animation-delay: -3s;"></div>

  <!-- Decorative dental icons floating -->
  <div class="absolute top-1/4 right-[15%] text-lavender-200/40 animate-float hidden lg:block" style="animation-delay: -2s;">
    <span class="material-symbols-rounded text-6xl">dentistry</span>
  </div>
  <div class="absolute bottom-1/3 left-[10%] text-lavender-200/30 animate-float hidden lg:block" style="animation-delay: -4s;">
    <span class="material-symbols-rounded text-5xl">favorite</span>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-28 pb-16 lg:pt-32 lg:pb-20 w-full">
    <div class="grid lg:grid-cols-2 gap-8 lg:gap-16 items-center">

      <!-- Text Content -->
      <div class="text-center lg:text-left">
        <div class="inline-flex items-center gap-2 bg-lavender-200 text-lavender-700 px-4 py-1.5 rounded-full text-sm font-medium mb-6 animate-fade-in shadow-sm border border-lavender-300">
          <span class="material-symbols-rounded text-[18px]">verified</span>
          <span>Atenci칩n Dental Personalizada</span>
        </div>

        <h1 class="text-4xl sm:text-5xl lg:text-6xl xl:text-7xl font-extrabold font-[var(--font-heading)] text-lavender-700 leading-tight animate-fade-in-up">
          Recupera la <br class="hidden sm:block" />
          <span class="block">
            confianza en tu sonrisa.
          </span>
        </h1>

        <p class="mt-6 text-lg sm:text-xl text-gray-soft max-w-xl mx-auto lg:mx-0 leading-relaxed animate-fade-in-up" style="animation-delay: 0.2s;">
          Consultas dise침adas para <strong class="text-dark-soft">escucharte y explicarte cada paso del tratamiento</strong>. Una experiencia dental clara, paciente y enfocada en tu tranquilidad.
        </p>

        <div class="mt-8 flex flex-col sm:flex-row gap-4 justify-center lg:justify-start animate-fade-in-up" style="animation-delay: 0.4s;">
          <a
            href={whatsappLink}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center gap-2 bg-lavender-400 hover:bg-lavender-500 text-white px-8 py-4 rounded-full text-base font-semibold transition-all duration-300 hover:shadow-xl hover:shadow-lavender-400/30 hover:-translate-y-1"
          >
            <span class="material-symbols-rounded text-[20px]">chat</span>
            Agendar Cita
          </a>
          <a
            href="#tratamientos"
            class="inline-flex items-center justify-center gap-2 bg-white hover:bg-lavender-50 text-dark px-8 py-4 rounded-full text-base font-semibold transition-all duration-300 border border-lavender-200 hover:border-lavender-400 hover:-translate-y-1"
          >
            <span class="material-symbols-rounded text-[20px]">medical_services</span>
            Ver Tratamientos
          </a>
        </div>

      </div>

      <!-- Image placeholder -->
      <div class="relative flex justify-center lg:justify-end lg:translate-x-4 xl:translate-x-12 animate-fade-in" style="animation-delay: 0.5s;">
        <div class="relative">
          <!-- Main image container -->
          <div class="w-64 h-64 sm:w-80 sm:h-80 lg:w-[460px] lg:h-[460px] xl:w-[520px] xl:h-[520px] rounded-full overflow-hidden border-4 border-white shadow-2xl shadow-lavender-400/20">
            <img 
              src="/images/Vanessafoto.webp" 
              alt="Dra. Vanessa Hern치ndez" 
              class="w-full h-full object-cover"
              fetchpriority="high"
              loading="eager"
            />
          </div>
          <!-- Decorative ring -->
          <div class="absolute -inset-4 rounded-full border-2 border-dashed border-lavender-200/50 animate-[spin_30s_linear_infinite]"></div>
        </div>
      </div>

    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2 animate-fade-in" style="animation-delay: 1s;">
    <span class="text-xs text-gray-soft">Desliza</span>
    <div class="w-6 h-10 border-2 border-lavender-300 rounded-full flex justify-center pt-2">
      <div class="w-1.5 h-1.5 bg-lavender-400 rounded-full animate-bounce"></div>
    </div>
  </div>
</section>
