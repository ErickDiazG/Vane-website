<script>
  function setupFloatingChat() {
    const bubble = document.getElementById('welcome-bubble');
    const closeBtn = document.getElementById('close-bubble');

    if (!bubble || !closeBtn) return;

    // Check if user has already dismissed it
    try {
      if (sessionStorage.getItem('vandent_chat_dismissed') === 'true') {
        return;
      }
    } catch (e) {
      // Ignore sessionStorage errors (e.g. strict privacy settings)
    }

    // Show the bubble after 3 seconds
    setTimeout(() => {
      if (bubble.classList.contains('hidden')) {
        bubble.classList.remove('hidden');
        // Brief delay to allow browser to render before animating
        setTimeout(() => {
          bubble.classList.remove('opacity-0', 'translate-y-4');
          bubble.classList.add('opacity-100', 'translate-y-0');
        }, 50);
      }
    }, 3000);

    // Function to hide bubble
    const hideBubble = (e) => {
      if (e) {
        e.preventDefault();
        e.stopPropagation();
      }
      
      bubble.classList.remove('opacity-100', 'translate-y-0');
      bubble.classList.add('opacity-0', 'translate-y-4');
      
      setTimeout(() => {
        bubble.classList.add('hidden');
      }, 500);
      
      try {
        sessionStorage.setItem('vandent_chat_dismissed', 'true');
      } catch (err) {}
    };

    // Remove existing listener to prevent duplicates on view transition re-renders
    closeBtn.removeEventListener('click', hideBubble);
    closeBtn.addEventListener('click', hideBubble);
  }

  // Run on first load
  setupFloatingChat();
  
  // Re-run safely on Astro view transitions
  document.addEventListener('astro:page-load', setupFloatingChat);
</script>
